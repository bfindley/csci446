!!!
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
  %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
  %title Gamez
  = stylesheet_link_tag "main", :media => "all"
  %body
    %div.personalBar
      - if current_user
        Logged in as 
        = link_to "#{current_user.get_full_name}", edit_admin_user_path(current_user)
        = ", #{current_user.role.name}."
        = link_to "Admin Gamez", admin_root_path  
        = link_to "Logout", logout_path  
    - if flash[:notice]
      %div.flashNotice
        = flash[:notice] 
    - if flash[:error]
      %div.flashError
        = flash[:error]
    #main
      %h1 
        = link_to "Gamez", admin_games_path
        Admin
      %div.adminBar
        %ul
          %li= link_to "Games", admin_games_path
          %li= link_to "Users", admin_users_path
          %li= link_to "Roles", admin_roles_path
      = yield
