#authors
  %h2 All the World's Authors

  %span#add-author= link_to image_tag("add.png")+"Add a new Author", new_author_path,:title => "Adds a new author profile"

  .pagination= will_paginate @authors

  #list
    %table
      %thead
        %tr
          %th.header#author-name Author Name
          %th.header Creation Date
          %th.icons 
        %tbody
          - @authors.each do |author|
            %tr{:class => cycle('list-line-odd','list-line-even')}
              %td= h author.author_name
              %td= h author.created_at.to_s(:create_time)
              %td.icons
                %ul
                  %li= link_to image_tag("magnifier.png"), author,{ :title => "View author" }
                  %li= link_to image_tag("report_edit.png"), edit_author_path(author), { :title => "Edit author" }
                  -# %li= link_to image_tag("delete.png"), author, :title => "Deletes author", :confirm => "Are you sure?", :method => :delete

  %p= pluralize(@total_authors, "author")

  .pagination= will_paginate @authors